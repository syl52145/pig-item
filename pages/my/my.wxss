/* pages/my/my.wxss */
.my{
    background: #f8f8f8;
}
.my .user-info-wrap{ box-sizing: border-box;
    background-image: linear-gradient(to top,
    #ffaa33 0%,
    #fbbc30 50%,
    #fabe2f 57%,
    #f6ce2c 100%);
    width: 100%;
    padding: 0 32rpx 80rpx;
    height: 290rpx;
}
.my .user-info-wrap .user-info .user-icon{
    width: 152rpx;
    height:152rpx;
    border-radius: 50%;
    margin-right: 40rpx;
  }
.my .user-info-wrap .user-info .user-name-wrap{
    color: #fff;
}

.my .account-info{
    box-sizing: border-box;
    padding: 35rpx 46rpx;
    width: 697rpx;
    height: 387rpx;
    background-color: #ffffff;
    border-radius: 20px;
    margin-top: -100rpx;
    margin-bottom: 40rpx;
  }
.my .account-info .account-header{
    border-bottom: 1px solid #aaaaaa;
    padding-bottom: 40rpx;
}
.my .account-info .withdrawal .btn{
    width: 120rpx;
    height: 50rpx;
    color: #fff;
    font-size: 28rpx;
    background-image: linear-gradient(-53deg,
    #fead32 0%,
    #f7cb2d 100%);
    border-radius: 10px;
  }
.my .account-info .account-footer .btn .text {
    color:#000;
    font-size: 24rpx;
}

.my .approve{
    box-sizing: border-box;
    width: 100%;
    background: #fff;
}
.my .approve .approve-item{
    box-sizing: border-box;
    font-size: 28rpx;
    height: 100rpx;
    border-bottom: 1px solid #aaaaaa;
    padding: 0 36rpx;
}
.my .approve .approve-item .left text{
    color: #000000;
}
.my .approve .approve-item .left image{
    margin-right: 20rpx;
}
.my .approve .approve-item .right  text{
    color: #898989;
}

.my .online-customer{
      position: fixed;
      bottom: 80rpx;
      left: 20rpx;
}
