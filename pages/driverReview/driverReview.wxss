.bg{
    position: fixed;
    left:0;
}
.loading{
    width:230rpx;
    height: 230rpx;
    position: absolute;
    top:3%;
    left:50%;
    transform:translateX(-50%); 
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 16px;
    color:#fff;

}
