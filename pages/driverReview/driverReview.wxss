.loading-q{
    width:200rpx;
    height:200rpx;
    position: absolute;
    border-radius: 50%;
    top:15rpx;
    left:15rpx;
    background: conic-gradient( #fbb633,#f8ca74,#fff);
    animation:xz 1s linear infinite;
}
.loading-q .q-cover{
    width:180rpx;
    height:180rpx;
    border-radius: 50%;
    background: #fbb633;
    position: absolute;
    z-index: 100;
    top:10rpx;
    left:10rpx;
}
.loading .loading-t{
    width:6%;
    height:28%;
    z-index: 200;
}
.loading .loading-ing{
    margin:2px 0;
    z-index: 100;
    font-size: 14px;
    z-index: 200;
}

@keyframes xz{
 
    0%{transform:rotate(0deg);}

    25%{transform:rotate(90deg);}

    50%{transform:rotate(180deg);}

    75%{transform:rotate(270deg);}

    100%{transform:rotate(360deg);}

}

.review{
    position: absolute;
    top:32%;
    left:0;
    padding:10%;
}
.review .review-title{
    font-size: 16px;
    color:#000;
    text-align: center;
    font-weight: 550;
}
.review .review-detail{
    font-size: 14px;
    color:#9e9d9d;
    margin-top:10px;
}